
{
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
     "parserOptions": {
       "parser": "babel-eslint"
     },
    "extends": [
      "airbnb",
      "plugin:react/recommended"
    ],
    "plugins": [
      "react-hooks",
    ],
    "rules": {
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn"
    }
}
